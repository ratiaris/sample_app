<%= form_for(@micropost) do | f | %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
	<%= f.text_area :content, class: "form-control", placeholder: "Compose new micropost..." %>
	</div>
	<div class="post">
		<%= f.submit "Post", class: "btn btn-large btn-primary" %>
		<em></em>
	</div>
<% end %>
