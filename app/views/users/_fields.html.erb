<%= render 'shared/error_messages' %>

<%= f.label      :name %>
<%= f.text_field :name, class: "form-control", placeholder: "John Doe",autofocus: true, required: true%>

<%= f.label       :email %>
<%= f.email_field :email, class: "form-control", placeholder: "john.doe@john.doe", required: true %>

<%= f.label          :password %>
<%= f.password_field :password, class: "form-control", required: true %>

<%= f.label          :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation, class: "form-control", required: true %>
